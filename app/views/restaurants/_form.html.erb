<%= form_for @restaurant do |f| %>

  <p>
    <% if @restaurant.errors.any? %>
      <h3><%= pluralize(@restaurant.errors.count, "error") %> prohibited this character from being saved:</h3>
      <ul>
        <% @restaurant.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>
  </p>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :street %>
    <%= f.text_field :street %>
  </p>

  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </p>

  <p>
    <%= f.label :country %>
    <%= f.text_field :country %>
  </p>

  <p>
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </p>

  <p>
    <%= f.label :neighborhood %>
    <%= collection_select(:restaurant, :neighborhood_id, Neighborhood.all, :id, :name, prompt: true) %>
  </p>

  <p>
    <%= f.label :categories %>
    <%= collection_check_boxes(:restaurant, :category_ids, Category.all, :id, :name) %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>  