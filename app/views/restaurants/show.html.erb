<%= link_to 'Back to Restaurants List', restaurants_path %>

<h1>Restaurant</h1>

<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.street %></p>
<p><%= @restaurant.city %></p>
<p><%= @restaurant.state %></p>
<p><%= @restaurant.country %></p>
<p><%= @restaurant.postal_code %></p>
<p><%= @restaurant.neighborhood.try(:name) %></p>
<p>Categories</p>
<p>  
  <% @restaurant.categories.each do |c| %>
    <ul>
      <li><%= c.try(:name) %></li>
    </ul>
  <% end %>
</p>

<%= link_to 'edit', edit_restaurant_path(@restaurant) %>